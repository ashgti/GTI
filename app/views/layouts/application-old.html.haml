!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title=config[:blog_title]
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=utf-8"}/
    =javascript_include_tag @scripts if @scripts
    =stylesheet_link_tag @styles if @styles
  %body
    #container
      #header
        %h1=link_to "&gt;&infin;", '/'
      #nav
        %ul
          %li=link_to "Articles"
          %li=link_to "tags", '/'
          %li=link_to "recent", '/'
        =# partial :nav
      =flash[:notice]
      #main_content
        ~yield