!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title
      &gt;&infin; &#124;
      ~catch_content :title
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=utf-8"}/
    -if scripts
      -scripts.each do |t| 
        =js_include_tag t
    -if stylesheets
      -stylesheets.each do |t|
        =css_include_tag t
    ~catch_content :js
  %body
    #header
      %h1=link_to "&gt;&infin;", url(:manager_home)
    #body_wrapper
      %ul#nav
        %li#posts.section
          %strong Posts
          %ul
            %li=link_to "New", resource(:manager, :posts, :new)
            %li=link_to "List", resource(:manager, :posts)
        %li#pages.section
          %strong Pages
          %ul
            %li=link_to "New"
            %li=link_to "List"
        %li#settings.section
          %strong Settings
          %ul
            %li=#link_to "General", url(:manager_settings_general)#resource(:manager, :settings, :general)
      #main
        %h2 
          ~catch_content :page_title
        =message[:notice]
        ~catch_content :for_layout