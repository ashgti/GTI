!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title
      &gt;&infin; &#124;
      ~yield :title
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=utf-8"}/
    =javascript_include_tag @scripts if @scripts
    =stylesheet_link_tag @styles if @styles
    ~yield :js
  %body
    #header
      %h1=link_to "&gt;&infin;", admin_path
    #body_wrapper
      %ul#nav
        %li#posts.section
          %strong Posts
          %ul
            %li=link_to "New", new_manager_post_path
            %li=link_to "List", manager_posts_path
        %li#pages.section
          %strong Pages
          %ul
            %li=link_to "New"
            %li=link_to "List"
        %li#settings.section
          %strong Settings
          %ul
            %li=#link_to "General", url(:manager_settings_general)#resource(:manager, :settings, :general)
      #main
        %h2 
          ~yield :page_title
        =flash[:notice]
        ~yield