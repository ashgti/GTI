!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title=config[:blog_title]
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=utf-8"}/
    -if scripts
      -scripts.each do |t| 
        =js_include_tag t
    -if stylesheets
      -stylesheets.each do |t|
        =css_include_tag t
  %body
    #container
      #header
        %h1=link_to "&gt;&infin;", '/'
      #nav
        %ul
          %li=link_to "Articles", url(:posts)
          %li=link_to "tags", '/'
          %li=link_to "recent", '/'
        =# partial :nav
      =message[:notice]
      #main_content
        ~catch_content :for_layout